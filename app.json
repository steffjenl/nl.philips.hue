      "name": {
        "en": "Dimmer Switch",
        "nl": "Dimmer Switch",
        "de": "Dimmschalter"
      },
      "class": "sensor",
      "capabilities": [
        "measure_battery"
      ],
      "id": "dimmerswitch"
    },
    {
      "images": {
        "large": "/drivers/motionsensor/assets/images/large.jpg",
        "small": "/drivers/motionsensor/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true,
