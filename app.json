          "options": {
            "singular": true,
            "title": {
              "en": "Select your bridge..."
            }
          },
          "navigation": {
            "next": "check_authentication"
          }
        },
        {
          "id": "check_authentication",
          "template": "loading"
        },
        {
          "id": "authenticate"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "name": {
        "en": "Light",
        "nl": "Lamp",
        "de": "Licht"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
